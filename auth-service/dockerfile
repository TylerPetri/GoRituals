# Dockerfile
FROM golang:1.24 AS build
WORKDIR /src

# Optional: ensure toolchain isnâ€™t blocked from auto (but the image is already 1.24)
ENV CGO_ENABLED=0 GOTOOLCHAIN=auto GOFLAGS=-buildvcs=false

# Cache deps/builds (requires BuildKit, which Docker Desktop has)
COPY go.mod go.sum ./
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    go mod download

COPY . .
RUN --mount=type=cache,target=/root/.cache/go-build \
    go build -trimpath -ldflags="-s -w" -o /out/auth ./cmd/auth-service

# Minimal runtime
FROM gcr.io/distroless/static-debian12
USER 10001:10001
WORKDIR /app
COPY --from=build /out/auth /app/auth
EXPOSE 8080
ENTRYPOINT ["/app/auth"]
